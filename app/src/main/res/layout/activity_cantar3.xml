<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CantarActivity">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_marginRight="150dp"
        android:onClick="exit"
        android:padding="10dp"
        android:src="@drawable/left"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_K_50Cent"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:backgroundTint="#52D3F0"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:text="50CENT" />

    <Button
        android:id="@+id/btn_Guns"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="25dp"
        android:textSize="20dp"
        android:text="GUNS ROSES" />
    <Button
        android:id="@+id/btn_TheBeatles"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:backgroundTint="#52D3F0"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:text="THE BEATLES"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btn_Queen"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="25dp"
        android:text="QUEEN"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btn_Cold"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:backgroundTint="#52D3F0"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="290dp"
        android:text="ColdPlay"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btn_BM"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="25dp"
        android:text="BRUNO MARS"
        android:textSize="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KARAOKE"
        android:textSize="47dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:theme="@style/Theme.SALEXXAPP.AppBarOverlay">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp" />
    </com.google.android.material.appbar.AppBarLayout>




</RelativeLayout>